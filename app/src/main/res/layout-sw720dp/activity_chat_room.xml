<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".ChatRoomActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ListView
            android:layout_height="match_parent"
            android:layout_width="300dp"
            android:id="@+id/listView"
            android:layout_alignParentStart="true">
        </ListView>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/buttonSend"
            android:text="@string/send"
            android:layout_alignParentEnd="@+id/msgBox"
            android:layout_alignParentBottom="true"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/msgBox"
            android:layout_alignParentBottom="true"
            android:hint="@string/typeHere"
            android:layout_toEndOf="@+id/buttonSend"
            android:layout_toStartOf="@+id/buttonReceive"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/buttonReceive"
            android:text="@string/receive"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/listView"/>

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/frameLayout"
            android:layout_toEndOf="@+id/listView"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>